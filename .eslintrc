{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "extends": [ 
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "indent": [ "error", 2 , { "SwitchCase": 1 }],
    "quotes": [ "error", "single" ],
    "semi": [ "error", "always" ]
  }
}